<div class="row">
	<div class="col-md-2">
		<h1><%=current_user.username%></h1>
        <%=current_user.email%>
	</div>

   <li role="presentation">
    <p><%= link_to "Edit Your Profile" , edit_user_path(current_user) %></p>
  </li>
</div>
<br>

<div align="center">
<button type="button" class="btn btn-link btn-lg"><%= button_to("Create New Topic", controller: "topics", action: "new") %></button>
<br>
<button type="button" class="btn btn-link btn-lg"><%= button_to "Create New Question", new_question_path %></button> 
</div>
<br>
<br>
<br>

<div class="row">
	<div class="col-md-5">
		<p>Avatar</p>
      <%=if current_user.avatar.url.nil?
         then
           image_tag('default.png')
         else
           image_tag(current_user.avatar.url)
         end %>

		<h4> <%=current_user.passed_tests%> passed tests</h4>
	</div>
	<div class="col-md-7">
		<p>Average score: <%=current_user.average_score%></p>
		<p>Maximum score: <%=current_user.maximum_score%></p>
		<p>Minumum score: <%=current_user.minimum_score%></p>
		<p>Number of approved questions: <%=current_user.approved_questions%></p>
	</div>
</div>
